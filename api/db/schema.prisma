datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id          Int       @id @default(autoincrement())
  group       String
  createdAt   DateTime  @default(now())
  submittedAt DateTime
}

model Image {
  id            Int      @id @default(autoincrement())
  imageLocation String
  dataLocation  String
}

model Answer {
  id          Int       @id @default(autoincrement())
  user        User       
  image       Image 
  answer      String
  createdAt   DateTime  @default(now())
  submittedAt DateTime
}